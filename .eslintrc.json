{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "rules": {
    "no-restricted-syntax": "off",
    "spaced-comment": "off",
    "camelcase": "off",
    "new-cap": "off",
    "func-names": 0,
    "object-shorthand": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 0,
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "import/extensions": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
